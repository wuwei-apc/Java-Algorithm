package Day01;

/**
 * @author zpc20
 *
 */
public class code01_PrintB {

	/**
	 * 打印32进制数
	 */
	private static void printB(int num) {
            for(int i=31;i>=0;i++) {
            	System.out.println((num&(1<<i))==0?"0":"1");
            }
            System.out.println();
	}

	/**
	 * @param args
	 */
	public static void main(String[] args) { // TODO Auto-generated method stub
      // int 4个字节(每个字节8位二进制) 32位
	  int num = 83928328; 
	  printB(num);
	}

}
